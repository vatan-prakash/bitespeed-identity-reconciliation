{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src", // Source files are in 'src'
    "outDir": "./dist", // Compiled JS files go to 'dist'
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"], // Include all .ts files in src
  "exclude": ["node_modules"]
}